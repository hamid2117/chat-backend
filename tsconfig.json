{
 "compilerOptions": {
  "target": "ES2020",
  "module": "commonjs",
  "lib": [
   "ES2020"
  ],
  "outDir": "./dist",
  "rootDir": "./",
  "baseUrl": "./",
  "paths": {
   "@/*": [
    "src/*"
   ],
   "@config/*": [
    "config/*"
   ],
   "@errors/*": [
    "errors/*"
   ]
  },
  "strict": true,
  "esModuleInterop": true,
  "skipLibCheck": true,
  "forceConsistentCasingInFileNames": true,
  "moduleResolution": "node",
  "resolveJsonModule": true,
  "sourceMap": true
 },
 "include": [
  "src/**/*",
  "config/**/*",
  "errors/**/*"
 ],
 "exclude": [
  "node_modules",
  "**/*.test.ts"
 ]
}